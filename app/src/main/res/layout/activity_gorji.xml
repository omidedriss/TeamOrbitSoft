<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gorji.Gorji"

    >


    <LinearLayout
        android:id="@+id/add_linear"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <Button
            android:id="@+id/metaco"
            app:shapeAppearanceOverlay="@style/gorji_style_metaco"
            style="@style/gorji_style_metaco"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Metaco"
            />


        <Button
            android:id="@+id/my_info"
            app:shapeAppearanceOverlay="@style/gorji_style_info"
            style="@style/gorji_style_info"
            android:layout_width="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="My Info" />
        <Button
            android:id="@+id/insta"
            app:shapeAppearanceOverlay="@style/gorji_style_insta"
            style="@style/gorji_style_insta"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Inesta" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:background="@drawable/gorji_background"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Login" />

        <Button
            android:id="@+id/fact_gorji"
            app:shapeAppearanceOverlay="@style/gorji_style_fact"
            style="@style/gorji_style_fact"
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Fact" />
        <Button
            android:id="@+id/gorji_contact"
            app:shapeAppearanceOverlay="@style/gorji_style_contact"
            style="@style/gorji_style_contact"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Contact"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/mohasebat"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Mohasebat"
            app:shapeAppearanceOverlay="@style/gorji_style_mohasebe"
            style="@style/gorji_style_mohasebe"/>

        <Button
            android:id="@+id/exit"
            app:shapeAppearanceOverlay="@style/gorji_style_exit"
            style="@style/gorji_style_exit"
            android:layout_width="325dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Exit" />


        <CheckBox
            android:id="@+id/checkBox_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Login_CheckBox" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

