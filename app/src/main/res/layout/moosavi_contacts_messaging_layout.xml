<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Moosavi.moosavi_contacts_messaging_activity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        >
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        >
        <RelativeLayout
            android:layout_weight="95"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <TextView
                android:id="@+id/moosavi_contacts_messaging_textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                app:fontFamily="casual"
                android:text="To Example"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/moosavi_contacts_messaging_textview_sents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:text="0 message sent"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                app:fontFamily="casual" />

            <Button
                android:id="@+id/moosavi_contacts_messaging_button_sending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="40dp"
                android:text="send"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                app:fontFamily="casual" />
            <EditText
                android:id="@+id/moosavi_contacts_messaging_edittext_thetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_above="@+id/moosavi_contacts_messaging_button_sending"
                android:layout_marginBottom="20dp"
                android:textColor="#FFFFFF"
                app:fontFamily="casual"
                android:text="Your text ..."
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/moosavi_contacts_messaging_textview_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text=" Moosavi > Contacts > messaging"
                    android:textColor="#FFFFFF"
                    app:fontFamily="casual" />
                <Button
                    android:id="@+id/moosavi_contacts_messaging_button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:backgroundTint="#FFFFFF"
                    android:textColor="#000000"
                    app:fontFamily="casual"
                    android:text="back"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>