<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Moosavi.moosavi_messager_getnumber_activity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        >

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="95"
            >
            <TextView
                android:id="@+id/moosavi_messager_getnumber_textview_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="Write the number you want to contact"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="casual"
                />

            <EditText
                android:id="@+id/moosavi_messager_getnumber_edittext_numgetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/moosavi_messager_getnumber_textview_guide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="_ _  _ _ _  _ _ _  _ _  _ _"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="casual" />
            <Button
                android:id="@+id/moosavi_messager_getnumber_button_enter"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:backgroundTint="#FFFFFF"
                app:fontFamily="casual"
                android:textColor="#000000"
                android:text="ok"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/moosavi_messager_getnumber_edittext_numgetter"
                android:layout_marginTop="50dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/moosavi_default_usingpages_background_addressbar"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/moosavi_messager_getnumber_textview_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text=" Moosavi > messager"
                    android:textColor="#FFFFFF"
                    app:fontFamily="casual"
                    android:layout_marginTop="6dp"
                    />
                <Button
                    android:id="@+id/moosavi_messager_getnumber_button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:backgroundTint="#FFFFFF"
                    android:textColor="#000000"
                    app:fontFamily="casual"
                    android:text="back"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>