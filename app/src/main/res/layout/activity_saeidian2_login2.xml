<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sms_drawable3">


    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/login_photo"
        android:text="Sign Up"
        android:textColor="#000"
        android:textSize="30dp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/signup"
            android:text="Create a new account"
            android:textSize="20dp"
            android:textColor="#808080"
            android:textStyle="bold"
            />

    <EditText
        android:id="@+id/get_name_family"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/create_account"
        android:layout_gravity="center"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="Name/Family"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#808080"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/get_email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/get_name_family"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#808080"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/get_phonenumber"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/get_email"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#808080"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/get_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/get_phonenumber"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="6 Digit Password"
        android:inputType="text"

        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#808080"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/get_confirmpassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/get_password"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="6 digit same Confirm Password"
        android:inputType="text"

        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#808080"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_confirmpassword"
        android:layout_marginLeft="20dp"
        android:background="@drawable/sms_drawable2"
        android:text="Sign Up"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/haveaccount2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup2"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:text="Already have acount? Sign In"
        android:textColor="#808080"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/login_photo"
        android:layout_width="200dp"
        android:layout_marginLeft="100dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/signin" />

</RelativeLayout>