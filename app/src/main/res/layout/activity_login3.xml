<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/data">

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:text="Sign_Up_Succesful "
        android:textColor="?attr/colorError"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/bungee_shade" />

    <TextView
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:text="Check your entered data"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/bungee_shade" />

    <TextView
        android:id="@+id/entered_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_account"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/sms_drawable"
        android:inputType="text"
        android:text="Name/Family"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:fontFamily="@font/bungee_shade" />

    <TextView
        android:id="@+id/entered_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entered_name"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/sms_drawable"
        android:inputType="text"
        android:text="Email"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:fontFamily="@font/bungee_shade" />

    <TextView
        android:id="@+id/entered_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entered_email"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/sms_drawable"
        android:inputType="text"
        android:text="Phone Number"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:fontFamily="@font/bungee_shade" />

    <TextView
        android:id="@+id/entered_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entered_phone"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/sms_drawable"
        android:inputType="text"
        android:text="Password"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:fontFamily="@font/bungee_shade" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entered_password"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="Exit"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exit"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="Already have acount? Sign in"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:fontFamily="@font/bungee_shade" />

</RelativeLayout>