<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamOrbitSoft" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TeamOrbitSoft.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


        <style name="MyTextViewStyle" parent="android:Widget.TextView">
            <item name="android:textColor">#F00</item>
            <item name="android:textStyle">bold</item>
        </style>
    <style name="settings_header">
        <item name="android:layout_marginBottom"> 10dip </item>
        <item name="android:background"> @color/white </item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:backgroundTint"> @color/colorblue </item>
        <item name="android:paddingLeft"> 10dip </item>
        <item name="android:layout_width"> match_parent </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:textSize"> 22sp </item>
        <item name="android:textColor"> @color/black </item>
        <item name="android:textStyle"> bold </item>
    </style>
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Theme.TeamOrbitSoft.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TeamOrbitSoft.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>