<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamOrbitSoft" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TeamOrbitSoft.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TeamOrbitSoft.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TeamOrbitSoft.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="gorji_style">
        <item name="backgroundTint">#ca1fdd</item>
        <item name="cornerSizeTopRight">70%</item>
        <item name="cornerSizeBottomLeft">70%</item>
    </style>

    <style name="gorji_style_metaco">
        <item name="backgroundTint">#FF2196F3</item>
        <item name="cornerSizeTopRight">90%</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeBottomLeft">90%</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>
    <style name="gorji_style_insta">
        <item name="backgroundTint">#FFEA7A57</item>
        <item name="cornerSizeTopLeft">90%</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeBottomRight">90%</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <style name="gorji_style_info">
        <item name="backgroundTint">#FF009688</item>
        <item name="cornerSizeTopLeft">90%</item>

        <item name="cornerSizeBottomRight">90%</item>

    </style>
    <style name="gorji_style_fact">
        <item name="backgroundTint">#FFDDEF2E</item>
        <item name="cornerSizeTopLeft">200%</item>
        <item name="cornerSizeBottomRight">200%</item>
    </style>

    <style name="gorji_style_contact">
        <item name="backgroundTint">#FFF12D1F</item>
        <item name="cornerSizeBottomLeft">100%</item>
        <item name="cornerSizeTopRight">80%</item>
        <item name="cornerFamilyTopRight">cut</item>

    </style>
    <style name="gorji_style_mohasebe">
        <item name="backgroundTint">#6C4A71</item>
        <item name="cornerSizeBottomLeft">70%</item>
        <item name="cornerSizeTopRight">70%</item>


    </style>
    <style name="gorji_style_exit">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeTopRight">70%</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="gorji_style_text_view">
        <item name="android:background">#4F5F6C</item>
        <item name="backgroundTint">#4F5F6C</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>